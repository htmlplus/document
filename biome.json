{
	"$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**",
			"!.next",
			"!build",
			"!node_modules",
			"!src/data/examples.ts",
			"!src/examples"
		]
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noUnknownAtRules": "off"
			}
		},
		"domains": {
			"next": "recommended",
			"react": "recommended"
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"quoteProperties": "asNeeded",
			"trailingCommas": "none"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							":NODE:",
							":BLANK_LINE:",

							"react",
							"react/**",
							"@react/**",
							":BLANK_LINE:",

							"next",
							"next/**",
							"@next/**",
							":BLANK_LINE:",

							"@htmlplus/**",
							":BLANK_LINE:",

							":PACKAGE:",
							":BLANK_LINE:",

							":ALIAS:",
							":BLANK_LINE:",

							":SIDE_EFFECT:",
							":BLANK_LINE:",

							":PATH:",
							":BLANK_LINE:"
						]
					}
				}
			}
		}
	}
}
